<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.selfcaremonitor.RegistrationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_above="@+id/btnRegister">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member Registration"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Login Details"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textSize="12sp"/>
            
            <EditText
                android:id="@+id/etMemberName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="16sp"
                android:inputType="text"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mobile No"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etMemberMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textSize="16sp"
                android:padding="15dp"
                android:maxLength="10"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etMemberEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etMemberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Confirm Password"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Physical Details"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Age"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etMemberAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="16sp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:textSize="12sp"/>

            <Spinner
                android:id="@+id/spMemberGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:entries="@array/gender"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Blood Group"
                android:textSize="12sp"/>

            <Spinner
                android:id="@+id/spMemberBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:entries="@array/blood_group"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Height (in Centimeter)"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etMemberHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height"
                android:inputType="numberDecimal"
                android:textSize="16sp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Weight (in Kgs)"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etMemberWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight"
                android:inputType="numberDecimal"
                android:textSize="16sp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_white"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"/>
</RelativeLayout>
